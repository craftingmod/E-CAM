{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via ts-node (CJS only)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--loader",
        "ts-node/register/transpile-only"
      ],
      "args": [
        "src/main.ts",
        "--debug",
      ],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "neverOpen",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "env": {
        "DEBUG": "molloo:*",
      }
    },
    {
      "name": "Launch with compile",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [],
      "args": [
        "build/main.mjs",
        "--debug",
      ],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "neverOpen",
      "console": "integratedTerminal",
      "preLaunchTask": "buildTS",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "env": {
        "DEBUG": "molloo:*",
      }
    }
  ]
}