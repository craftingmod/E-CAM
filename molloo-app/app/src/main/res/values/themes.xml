<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Molloo.Compat" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- IntroActivity -->
    <style name="Theme.Molloo.Intro" parent="Theme.Material3.DayNight">

    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize20dp" parent="">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Theme.Molloo.OneUI" parent="@style/OneUITheme">

    </style>

    <style name="linearContainer">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@color/sesl_background_floating</item>
    </style>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">@color/color_splash_back</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.Molloo.Compat</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_splash_back</item>
        <item name="android:navigationBarColor">@color/color_splash_back</item>
        <item name="android:windowLightStatusBar">@bool/isDarkMode</item>
    </style>

    <!-- ActionFragment -->

    <!-- Dialog -->
    <style name="MaterialDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered" />

</resources>